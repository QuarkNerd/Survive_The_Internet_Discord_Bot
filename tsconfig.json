{
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,
    "target": "esNext",
    "outDir": "dist",
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
