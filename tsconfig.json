{
    "compilerOptions": {
        "module": "commonjs",
        "strictNullChecks": true,
        "target": "es2020",
        "outDir": "dist",
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules"]
}